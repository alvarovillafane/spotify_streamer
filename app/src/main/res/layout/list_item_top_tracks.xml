<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/image_album"
        android:src="@drawable/image_test"
        android:layout_margin="@dimen/activity_vertical_margin"
        />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:paddingLeft="@dimen/activity_vertical_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_album"
            android:text="tests sa sas"
            android:textIsSelectable="false"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/name_track"
            android:layout_alignStart="@+id/name_track"
            android:layout_marginTop="26dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_track"
            android:text="track name"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/name_album"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>